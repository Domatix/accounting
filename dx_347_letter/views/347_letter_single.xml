<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="dx_347_letter.report_347_letter" name="Carta para documento 347">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="header">
                        <div class="row" style="width:100%;">
                            <div class="col-xs-5 invoice-enuc-font-bold">
                                <span style="font-size:18px;" t-field="o.report_id.company_id.name"/><br/>
                                <span t-field="o.report_id.company_id.street"/><br/>
                                <span t-field="o.report_id.company_id.zip"/>
                                <span>,
                                </span><span t-field="o.report_id.company_id.city"/><br/>
                                <span>CIF:</span>
                                <span style="color:#000;font-weight:bold;" t-field="o.report_id.company_id.vat"/><br/>
                                <span>Phone</span>
                                <span>:</span>
                                <span style="color:#000;font-weight:bold;" t-field="o.report_id.company_id.phone"/><br/>
                                <span>Fax:</span>
                                <span style="color:#000;font-weight:bold;" t-field="o.report_id.company_id.fax"/><br/>
                                <span>E-mail:</span>
                                <span style="color:#000;font-weight:bold;" t-field="o.report_id.company_id.email"/><br/>
                            </div>
                            <div class="col-xs-7 text-right">
                                <img t-field="o.report_id.company_id.logo" t-field-options='{"widget": "image" }'/>
                            </div>
                        </div>
                    </div>
                    <div class="page">
                        <div style="page-break-after:always; font-family:'Helvetica'; font-size: 18px;">
                            <p style="margin-left:12cm; padding-top:3cm;">
                                <t t-esc="o.get_date()" style="font-weight: bold; text-align:right;"></t>
                            </p>
                            <br/>
                            <div style="margin-left:12cm; line-height: 70%">
                                <p style="font-weight: bold; line-height: 100%">
                                    <t t-esc="o.partner_id.name[:60]"></t>
                                </p>
                                <p>
                                    <t t-esc="o.partner_vat"></t>
                                </p>
                                <p style="line-height: 100%">
                                    <t t-esc="o.partner_id.street[:60]"></t>
                                </p>
                                <p>
                                    <t t-esc="o.partner_id.zip"></t>
                                    <t t-esc="o.partner_id.city"></t>
                                </p>
                                <p>
                                    <t t-esc="o.partner_id.state_id.name"></t>
                                </p>
                                <br/>
                            </div>
                            <br/>
                            <p>Dear customer:</p>
                            <p>The reason for this letter is to inform you that, in accordance with current legislation and for the purpose
                               of making the annual declaration of operations with third parties,
                               the total number of transactions carried out with you in the previous year, according to Our notes amount to:</p>
                            <br/>
                            <p style="margin-left:1cm">
                                <t t-if="o.operation_key == 'A'">
                                    TOTAL PURCHASES :
                                </t>
                                <t t-if="o.operation_key == 'B'">
                                    TOTAL SALES :
                                </t>
                                <t t-esc="str('{:,.2f}'.format(o.amount)).replace('.','%').replace(',','.').replace('%',',')"></t>
                                €
                            </p>
                            <br/>
                            <div style="float: left;line-height:70%">
                                <p>
                                    1º Quarter amount
                                </p>
                                <p>
                                    2º Quarter amount
                                </p>
                                <p>
                                    3º Quarter amount
                                </p>
                                <p>
                                    4º Quarter amount
                                </p>
                            </div>
                            <div style="float: left; width: 30%; line-height:70%; text-align:right">
                                <p>
                                    <t t-esc="o.first_quarter" t-esc-options='{"widget": "monetary", "display_currency": "o.report_id.company_id.currency_id"}'></t>
                                </p>
                                <p>
                                    <t t-esc="o.second_quarter" t-esc-options='{"widget": "monetary", "display_currency": "o.report_id.company_id.currency_id"}'></t>
                                </p>
                                <p>
                                    <t t-esc="o.third_quarter" t-esc-options='{"widget": "monetary", "display_currency": "o.report_id.company_id.currency_id"}'></t>
                                </p>
                                <p>
                                    <t t-esc="o.fourth_quarter" t-esc-options='{"widget": "monetary", "display_currency": "o.report_id.company_id.currency_id"}'></t>
                                </p>
                            </div>
                            <div>
                                <br/><br/><br/><br/><br/>
                                <p>In case there is any difference with your accounts, please be advised to communicate it as soon as possible,
                                   otherwise, we will give the quantity indicated accordingly.</p>
                                <br/>
                                <p>We take this opportunity to greet you.</p>
                                <t t-if="o.report_id.company_id.signature">
                                    <img t-att-src="'data:image/png;base64,%s' % o.report_id.company_id.signature" style="max-height: 195px; float:right; padding-right:4cm;"/>
                                </t>                            </div>
                        </div>
                    </div>
                    <div class="footer" style="text-align:center;">
                        <span>PAGE 1 / 1</span>
                    </div>
                </t>
            </t>
        </template>
        <record id="dx_347_letter.report_347_individual" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="dx_347_letter.paperformat_347"/>
        </record>
    </data>
</openerp>
