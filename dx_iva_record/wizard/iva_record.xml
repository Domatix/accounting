<odoo>

    <record id="view_iva_record" model="ir.ui.view">
      <field name="name">IVA Record</field>
      <field name="model">dx_iva_record.iva_record_wizard</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="IVA record">
          <label
            colspan="4"
            string="This menu prints a tax declaration based on invoices or payments. Select one or several periods of the fiscal year. The information required for a tax declaration is automatically generated by Odoo from invoices (or payments, in some countries). This data is updated in real time. Thatâ€™s very useful because it enables you to preview at any time the tax that you owe at the start and end of the month or quarter."/>

          <group string="IVA record" col="2">
            <group>
            <field name="partner_type"/>
          </group>
            <group>
            <field name="company_id" widget="selection" />
          </group>
          </group>

          <group string="Dates" col="2">
            <group>
            <field name="date_start" string="Fecha inicio"/>
          </group>
          <group>
            <field name="date_end" string="Fecha final"/>
          </group>
          </group>
          <group string="Impuestos" name="taxes">
            <field name="tax_ids" widget="many2many_tags" domain="[('company_id','=', company_id)]" nolabel="1"/>
          </group>

          <footer>
            <button name="print_report" string="Print Tax Statement" type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_iva_record" model="ir.actions.act_window">
      <field name="name">IVA Record</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">dx_iva_record.iva_record_wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_iva_record"/>
      <field name="target">new</field>
    </record>
    <menuitem action="action_iva_record" id="action_menu_iva_record" parent="account.menu_finance_legal_statement" name="IVA record" sequence="3"/>
</odoo>
