<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_iva_summary" model="ir.ui.view">
            <field name="name">IVA summary</field>
            <field name="model">dx_iva_summary.iva_summary_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="IVA Summary">
                    <group string="IVA summary" col="4">
                        <field name="chart_tax_id" widget="selection"/>
                        <field name="fiscalyear_id"/>
                    </group>

                    <group string="Periods" col="4">
                        <field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                        <field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print Tax Statement" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_iva_summary" model="ir.actions.act_window">
            <field name="name">IVA Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dx_iva_summary.iva_summary_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_iva_summary"/>
            <field name="target">new</field>
        </record>
        <menuitem action="action_iva_summary" id="action_menu_iva_summary" parent="account.menu_tax_report" name="IVA Summary" sequence="2"/>
    </data>
</openerp>
