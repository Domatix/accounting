<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_signings_list" model="ir.ui.view">
            <field name="name">Signings List</field>
            <field name="model">dx_order_signings_report.order_signings</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Print Order Signings List">
                    <group colspan="4" col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="employee_id" colspan="4"/>
                        <field name="order_id" colspan="4"/>
                        <field name="group_by"/>
                    </group>
                    <separator colspan="4"/>

                    <group colspan="4" col="4">
                        <button special="cancel" string="Cancel" icon='gtk-cancel'/>
                        <button name="print_report" string="Print" type="object" icon="gtk-print"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_hr_signings_list" model="ir.actions.act_window">
            <field name="name">Signings List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dx_order_signings_report.order_signings</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hr_signings_list"/>
            <field name="target">new</field>
        </record>
        <menuitem action="action_hr_signings_list"
                  id="action_menu_hr_signings_list"
                  parent="hr_attendance.menu_hr_attendance"
                  name="Signings report"
                  sequence="4"/>
    </data>
</openerp>
