<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

       <report id="report_accounting_notes_action"
          string="Print Accounting Notes"
          model="account.move.line"
          report_type="qweb-pdf"
          name="dx_accounting_notes.report_accounting_notes_template"
          />

        <template id="report_accounting_notes_template">
          <t t-call="report.html_container">
              <t t-call="report.external_layout">
                <div class="page">
                  <table class="table table-condensed" style="width: 100%; border: 1px solid #000000; font-size: 12px; margin-top: 35px;">
          	      <thead>
          	          <tr>
                          <th class="text-center" style="border: solid 1px; width: 9%;">Date</th>
                          <th class="text-center" style="border: solid 1px; width: 9%;">Period</th>
                          <th class="text-center" style="border: solid 1px; width: 9%;">Account</th>
                          <th class="text-center" style="border: solid 1px; width: 18%;">Name</th>
          	              <th class="text-center" style="border: solid 1px; width: 8%;">Debit</th>
          	              <th class="text-center" style="border: solid 1px; width: 8%;">Credit</th>
                          <th class="text-center" style="border: solid 1px; width: 8%;">Balance</th>
          	              <th class="text-center" style="border: solid 1px; width: 9%;">Maturity</th>
          	              <th class="text-center" style="border: solid 1px; width: 22%;">Journal</th>
          	          </tr>
          	     </thead>
          	     <tbody>
                  <t t-set="total_deb" t-value="0"/>
                  <t t-set="total_cred" t-value="0"/>
                     <tr t-foreach="docs" t-as="o" style="border: 1px solid #000000 !important;">
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.date"/>
          	            	</td>
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.period_id"/>
          	            	</td>
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.move_id"/>
          	            	</td>
          	          		<td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.name"/>
          	            	</td>
          	          		<td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.debit"/>
          	            	</td>
          	          		<td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.credit"/>
          	            	</td>
                          <td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.balance"/>
          	            	</td>
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.date_maturity"/>
          	            	</td>
          	          		<td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.journal_id"/>
          	            	</td>

                      </tr>
          	        </tbody>

	    </table>

                </div>
              </t>
            </t>
        </template>

        <record id="paperformat_accounting_lines" model="report.paperformat">
            <field name="name">Iva Record</field>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">45</field>
            <field name="dpi">90</field>
        </record>

        <record id="dx_accounting_notes.report_accounting_notes_action" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="dx_accounting_notes.paperformat_accounting_lines"/>
        </record>
    </data>
</openerp>
