<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

       <report id="report_due"
          string="Print Due"
          model="account.move.line"
          report_type="qweb-pdf"
          name="dx_accounting_notes.report_due_template"
          />

        <template id="report_due_template">
          <t t-call="report.html_container">
              <t t-call="report.external_layout">
                <div class="page">
                  <table class="table table-condensed" style="width: 100%; border: 1px solid #000000; font-size: 12px; margin-top: 35px;">
          	      <thead>
          	          <tr>
                          <th class="text-center" style="border: solid 1px;">Invoice</th>
                          <th class="text-center" style="border: solid 1px;">Date invoice</th>
                          <th class="text-center" style="border: solid 1px;">Origin</th>
                          <th class="text-center" style="border: solid 1px;">Name</th>
          	              <th class="text-center" style="border: solid 1px;">Partner</th>
          	              <th class="text-center" style="border: solid 1px;">Ref Partner</th>
                          <th class="text-center" style="border: solid 1px;">Payment mode</th>
          	              <th class="text-center" style="border: solid 1px;">Payment term</th>
                          <th class="text-center" style="border: solid 1px;">Account</th>
                          <th class="text-center" style="border: solid 1px;">Debit</th>
                          <th class="text-center" style="border: solid 1px;">Credit</th>
                          <th class="text-center" style="border: solid 1px;">Balance</th>
                          <th class="text-center" style="border: solid 1px;">Maturity date</th>
                          <th class="text-center" style="border: solid 1px;">Move</th>
                          <th class="text-center" style="border: solid 1px;">Conciliate</th>
                          <th class="text-center" style="border: solid 1px;">Parcial conciliate</th>
          	          </tr>
          	     </thead>
          	     <tbody>
                     <tr t-foreach="docs" t-as="o" style="border: 1px solid #000000 !important;">
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.stored_invoice_id"/>
          	            	</td>
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.invoice_date"/>
          	            	</td>
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.invoice_origin"/>
          	            	</td>
          	          		<td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.name"/>
          	            	</td>
          	          		<td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.partner_id"/>
          	            	</td>
          	          		<td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.partner_ref"/>
          	            	</td>
                          <td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.invoice.payment_mode_id"/>
          	            	</td>
          	          		<td class="text-center"  style="border: solid 1px;">
          	          			<span t-field="o.payment_term_id"/>
          	            	</td>
          	          		<td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.account_id"/>
          	            	</td>
                          <td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.debit"/>
          	            	</td>
                          <td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.credit"/>
          	            	</td>
                          <td class="text-right"  style="border: solid 1px;">
          	          			<span t-field="o.maturity_residual"/>
          	            	</td>
                          <td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.date_maturity"/>
          	            	</td>
                          <td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.move_id"/>
          	            	</td>
                          <td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.reconcile_id"/>
          	            	</td>
                          <td class="text-left"  style="border: solid 1px;">
          	          			<span t-field="o.reconcile_partial_id"/>
          	            	</td>

                      </tr>
          	        </tbody>

	    </table>

                </div>
              </t>
            </t>
        </template>

        <record id="paperformat_due_report" model="report.paperformat">
            <field name="name">Iva Record</field>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">45</field>
            <field name="dpi">90</field>
        </record>

        <record id="dx_accounting_notes.report_due" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="dx_accounting_notes.paperformat_due_report"/>
        </record>
    </data>
</openerp>
